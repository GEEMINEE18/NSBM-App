<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1D981D"
            android:gravity="top">

            <Button
                android:id="@+id/menuBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/menu"
                android:backgroundTint="#1D981D"
                android:contentDescription="@string/menu_button" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ABOUT"
                android:textColor="#161E65"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/nsbmlogo"
                android:contentDescription="@string/nsbm_logo" />
        </androidx.appcompat.widget.Toolbar>

        <Button
            android:id="@+id/editBtn"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/editicon"
            android:backgroundTint="#ffffff"
            android:contentDescription="@string/edit_button_reader"
            android:layout_constraintLeft_toLeftOf="parent"
            android:layout_constraintRight_toRightOf="parent"
            android:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/myButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-45dp"
            android:background="@drawable/back"
            android:backgroundTint="#ffffff"
            android:contentDescription="@string/back_button_reader" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:text="Select Feedback Type"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="12dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="35dp"
            app:srcCompat="@drawable/black_circle"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="189dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Feedback"
            android:textSize="17dp"
            android:layout_marginTop="-15dp"
            android:layout_marginStart="100dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="12dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/black_circle"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="189dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report a Problem"
            android:textSize="17dp"
            android:layout_marginTop="-15dp"
            android:layout_marginStart="100dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="12dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/black_circle"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="189dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tell us of ant ideas"
            android:textSize="17dp"
            android:layout_marginTop="-15dp"
            android:layout_marginStart="100dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>